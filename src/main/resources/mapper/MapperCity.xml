<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.project.dao.interfaces.IAddress">

    <insert id="add">
        INSERT into Address (Country, City, Street, Branch_id)
        VALUES (#{country},#{city},#{street},#{foreignKey})
    </insert>

    <select id="getByStreet" resultMap="AddressResultMap">
        SELECT * FROM Address
        WHERE street = #{Street}
    </select>

    <resultMap id="AddressResultMap" type="com.solvd.project.models.Address" autoMapping="false">
        <id column="id_Address" property="addressId"/>
        <result column="Country" property="country"/>
        <result column="City" property="city"/>
        <result column="Street" property="street"/>
        <result column="Branch_id" property="foreignKey"/>
    </resultMap>
</mapper>